rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Users collection - users can read/write their own document
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Mentors collection - read-only for everyone, write for the mentor themselves
    match /mentors/{mentorId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == mentorId;
    }

    // Onboarding collection - users can read/write their own onboarding data
    match /onboarding/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Chats collection - only participants can read/write
    match /chats/{chatId} {
      allow read: if request.auth != null && 
        (resource.data.mentorId == request.auth.uid || 
         resource.data.menteeId == request.auth.uid);
      
      allow create: if request.auth != null && 
        (request.resource.data.mentorId == request.auth.uid || 
         request.resource.data.menteeId == request.auth.uid);
      
      allow update: if request.auth != null && 
        (resource.data.mentorId == request.auth.uid || 
         resource.data.menteeId == request.auth.uid);

      // Messages subcollection - only participants can read/write
      match /messages/{messageId} {
        allow read, write: if request.auth != null && 
          (get(/databases/$(database)/documents/chats/$(chatId)).data.mentorId == request.auth.uid || 
           get(/databases/$(database)/documents/chats/$(chatId)).data.menteeId == request.auth.uid);
      }
    }

    // Scheduled calls subcollections - users can read/write their own scheduled calls
    match /users/{userId}/scheduled_calls/{callId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    match /users/{userId}/scheduledCalls/{callId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}